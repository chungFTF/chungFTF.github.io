/* ---------------------------------
 *         Responsive Layout
 * --------------------------------- */
+widescreen()
    .is-1-column .container, .is-2-column .container
        max-width: 1000px
        width: auto
        margin: 0 auto

+fullhd()
    .is-2-column .container
        max-width: 1200px
        width: auto
        margin: 0 auto

    .is-1-column .container
        max-width: 1000px
        width: auto
        margin: 0 auto

+tablet()
    .is-sticky
        position: -webkit-sticky
        position: sticky
        top: 1.5rem
        z-index: 99

    .column-main, .column-left, .column-right, .column-right-shadow
        &.is-sticky
            top: .75rem
            align-self: flex-start

+mobile()
    .section
        padding: 1.5rem 1rem

/* Custom layout adjustments for wider main content */
+tablet()
    .is-2-column .column-main.is-8-tablet,
    .is-2-column .column-main
        width: 90% !important
        flex: none !important
    
    .is-2-column .column-left
        width: 10% !important
        flex: none !important

+desktop()
    .is-2-column .column-main.is-8-desktop,
    .is-2-column .column-main
        width: 90% !important
    
    .is-2-column .column-left
        width: 10% !important

+widescreen()
    .is-2-column .column-main.is-8-widescreen,
    .is-2-column .column-main
        width: 90% !important
    
    .is-2-column .column-left
        width: 10% !important
