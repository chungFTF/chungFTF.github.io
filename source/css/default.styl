// 導入 Icarus 的基本樣式
@import '../../node_modules/hexo-theme-icarus/source/css/style'

// 暗色主題覆蓋樣式
dark-primary-color = rgb(55, 61, 72)
dark-primary-color-hover = rgb(67, 74, 86)
dark-primary-color-active = rgb(44, 49, 58)
dark-font-color = #c0c0c0

// 全局暗色背景
html, body
  background: #0e1225 !important
  color: dark-font-color !important

// 導航欄和卡片
.navbar,
.card
  background-color: rgba(40, 44, 52, 0.5) !important
  color: dark-font-color !important
  backdrop-filter: none
  -webkit-backdrop-filter: none

.card:hover
  background-color: rgba(40, 44, 52, 0.8) !important

// Comment 卡片使用莫蘭迪藍色系
.card#comments
  background-color: rgba(167, 183, 195, 0.95) !important
  color: #e8eff5 !important
  
  .card-content
    background-color: rgba(167, 183, 195, 0.95) !important
    color: #e8eff5 !important
    
  .title
    color: #e8eff5 !important

// 頁腳
.footer
  background-color: rgba(40, 44, 52, 0.5) !important
  color: dark-font-color !important
  &:before
    background-color: rgba(40, 44, 52, 0.5) !important

// 導航項目
.navbar-main .navbar-menu .navbar-item
  color: dark-font-color !important
  &:hover,
  &:focus
    color: #ffffff !important
    background-color: dark-primary-color !important

// 字體顏色
body,
strong,
time,
.title,
.footer,
.card,
.content h1,
.content h2,
.content h3,
.content h4,
.content h5,
.content h6,
.navbar-item,
.navbar-item.is-active,
.navbar-link,
.menu-list a,
.menu-label,
.level-item,
.input,
.textarea,
.button.is-white,
.button.is-transparent,
.article-licensing
  color: dark-font-color !important

.media-content,
.has-text-grey,
.link-muted
  color: dark-font-color !important

// 連結
a
  color: rgb(82, 153, 224) !important
  &:hover
    color: #ffffff !important

// 輸入框
.input, .textarea
  background-color: dark-primary-color-hover !important
  border-color: dark-primary-color !important
  color: dark-font-color !important

// 按鈕
.button.is-primary, .button.is-light, .button.is-small
  background-color: dark-primary-color !important
  color: dark-font-color !important
  
  &:hover, &.is-hovered
    color: #ffffff !important
    background-color: dark-primary-color-hover !important

// 標籤
.tag:not(body)
  color: dark-font-color !important
  background-color: dark-primary-color !important

.tag.is-grey
  background-color: dark-primary-color-hover !important

// 菜單
.menu-list a:hover
  background-color: dark-primary-color !important

.menu-list a.is-active
  background-color: dark-primary-color-hover !important

// 引用
.content blockquote,
.article-licensing
  background-color: dark-primary-color !important
  border-color: dark-primary-color-hover !important

// 表格
.content table thead td,
.content table thead th
  color: dark-font-color !important

.content table td,
.content table th
  border-color: dark-primary-color-hover !important

// 分隔線
hr
  background-color: dark-primary-color-hover !important

// Dasque 留言系統樣式 (莫蘭迪藍色系)
#dasque-comments,
#dasque-comments *,
.dasque-comment,
.dasque-comment *,
.dasque-comment-form,
.dasque-comment-form *,
.dasque-comment-content,
.dasque-comment-content *,
.dasque-comment-author,
.dasque-comment-author *,
.dasque-comment-text,
.dasque-comment-text *,
.dasque-comment-meta,
.dasque-comment-meta *,
.dasque-reply-form,
.dasque-reply-form *,
[class*="dasque"],
[class*="dasque"] *,
[id*="dasque"],
[id*="dasque"] *
  background-color: rgba(167, 183, 195, 0.95) !important
  color: #e8eff5 !important
  border-color: rgba(140, 158, 170, 0.8) !important

// 更強制的文字顏色覆蓋
#dasque-comments p,
#dasque-comments span,
#dasque-comments div,
#dasque-comments text,
.dasque-comment p,
.dasque-comment span,
.dasque-comment div,
.dasque-comment-text p,
.dasque-comment-text span,
.dasque-comment-text div,
[class*="dasque"] p,
[class*="dasque"] span,
[class*="dasque"] div,
[class*="dasque"] text
  color: #e8eff5 !important
  background-color: transparent !important

// Dasque 輸入框 (莫蘭迪藍色系)
.dasque-comment-form input,
.dasque-comment-form textarea,
.dasque-reply-form input,
.dasque-reply-form textarea,
[class*="dasque"] input,
[class*="dasque"] textarea
  background-color: rgba(185, 198, 208, 0.9) !important
  color: #e8eff5 !important
  border-color: rgba(140, 158, 170, 0.8) !important
  
  &::placeholder
    color: rgba(232, 239, 245, 0.7) !important

// Dasque 按鈕 (深藍莫蘭迪色系)
.dasque-comment-form button,
.dasque-reply-form button,
.dasque-submit-btn,
.dasque-reply-btn,
[class*="dasque"] button
  background-color: rgba(128, 148, 165, 0.9) !important
  color: #ffffff !important
  border-color: rgba(128, 148, 165, 0.9) !important
  
  &:hover
    background-color: rgba(108, 128, 145, 1) !important
    color: #ffffff !important

// Dasque 連結 (淺藍莫蘭迪色系)
.dasque-comment a,
.dasque-comment-author a,
.dasque-reply-link,
[class*="dasque"] a
  color: rgb(161, 196, 220) !important
  
  &:hover
    color: rgba(220, 230, 235, 1) !important

